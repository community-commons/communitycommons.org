<div class="container">
    <h1 class="section-title text-center no-margin-top">Search for Places</h1>
    <div class="panel panel-border">
        <div class="panel-body">
            <div class="input-group">
                    <input type="text" class="form-control input-lg" placeholder="Enter your search term here...">
                    <span class="input-group-btn">
                        <button class="btn btn-ar btn-lg btn-primary" type="button">Search</button>
                    </span>
                </div><!-- /input-group -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2 class="right-line">Latest and most popular</h2>
        </div>
        <div class="col-md-6">
            <h3 class="no-margin-top">Initiatives</h3>
            <ul class="list-line">
              <% initiatives.forEach(function(initiative) { %>
                <li><a href="/initiatives/<%= initiative.id %>"><%= initiative.name %></a></li>
              <% }) %>
            </ul>
            <a class="btn btn-default" href="/initiatives">View All <i class="fa fa-arrow-right"></i></a>
        </div>
        <div class="col-md-6">
            <h3 class="no-margin-top">Communities</h3>
            <ul class="list-line">
            <% communities.forEach(function(com) { %>
              <li><a href="/places/<%= com.name %>"><%= com.name %></a></li>
            <% }) %>
            </ul>
            <a class="btn btn-default" href="/communities">View All <i class="fa fa-arrow-right"></i></a>
        </div>
    </div> <!-- row -->
</div>