<div class="container">
    <h1 class="section-title text-center no-margin-top">Search for Possibilities</h1>
    <div class="panel panel-border">
        <div class="panel-body">
            <div class="input-group">
                    <input type="text" class="form-control input-lg" placeholder="Enter your search term here...">
                    <span class="input-group-btn">
                        <button class="btn btn-ar btn-lg btn-primary" type="button">Search</button>
                    </span>
                </div><!-- /input-group -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2 class="right-line">Latest and most popular</h2>
        </div>
        <div class="col-md-6">
            <h3 class="no-margin-top">Focus Areas</h3>
            <ul class="list-line">
              <% focuses.forEach(function(focus) { %>
                <li><a href="/foci/<%= focus.id %>"><%= focus.name %></a></li>
              <% }) %>
            </ul>
            <a class="btn btn-default" href="/foci">View All <i class="fa fa-arrow-right"></i></a>
        </div>
        <div class="col-md-6">
            <h3 class="no-margin-top">Best Practices</h3>
            <ul class="list-line">
            <% guides.forEach(function(guide) { %>
              <li><a href="/guides/<%= guide.id %>"><%= guide.title %></a></li>
            <% }) %>
            </ul>
            <a class="btn btn-default" href="/guides">View All <i class="fa fa-arrow-right"></i></a>
        </div>
    </div> <!-- row -->
</div>